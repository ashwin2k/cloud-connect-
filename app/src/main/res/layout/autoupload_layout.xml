<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"

    >

    <RelativeLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/service"
        android:layout_marginTop="80dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/project"/>
        <TextView
            android:id="@+id/x1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Turn on auto backup?"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_centerVertical="true"
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_x"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
             />
    </RelativeLayout>
        <TextView
            android:layout_below="@id/service"
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:text="Backup Directories"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/direc_list"
            android:layout_below="@id/ss"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="300dp"/>
    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/addLis"

        android:layout_below="@id/direc_list"
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:src="@drawable/add"/>
        <TextView
            android:id="@+id/e1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Add a directory"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/delLis"
        android:layout_below="@id/addLis"
        android:layout_marginTop="15dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:src="@drawable/remove"/>
        <TextView
            android:id="@+id/z1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Clear all"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:background="#1a1a20"
        app:itemTextColor="#FFF"
        android:maxWidth="250dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:elevation="5dp"
        app:menu="@menu/menu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>