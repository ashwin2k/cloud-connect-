<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"

    >

    <RelativeLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <include
            android:id="@+id/k"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/server_info"
            android:layout_marginTop="80dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/server"/>
            <TextView
                android:id="@+id/e1"
                android:textColor="?android:attr/textColorPrimary"
                android:text="Edit Server Locations"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_below="@id/server_info"
                android:id="@+id/theme_info"
                android:layout_marginTop="12dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/theme_ico"/>
                <TextView
                    android:id="@+id/o1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="Theme"
                    android:layout_marginTop="12dp"
                    android:textSize="16dp"
                    android:layout_marginStart="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12dp"
                    android:layout_below="@id/o1"
                    android:id="@+id/o2"
                    android:layout_marginTop="3dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:text="Change current theme"
                    android:layout_marginStart="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/wifi_info"
                    android:layout_below="@id/theme_info"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/wifi_set"/>
                    <TextView
                        android:id="@+id/a1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:text="Wifi"
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:layout_marginStart="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12dp"
                        android:layout_below="@id/a1"
                        android:id="@+id/a2"
                        android:layout_marginTop="3dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text="Home"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/gate_info"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_below="@id/wifi_info"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/speed_det"/>
                    <TextView
                        android:id="@+id/b1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:text="Gateway and Speed"
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:layout_marginStart="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12dp"
                        android:layout_below="@id/b1"
                        android:id="@+id/b2"
                        android:layout_marginTop="3dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text="nan"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="?android:attr/textColorPrimary"
                        android:id="@+id/b3"
                        android:textSize="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="92"

                        android:layout_marginEnd="15dp"/>
                    <TextView
                        android:textColor="?android:attr/textColorSecondary"
                        android:id="@+id/optionalmbps"
                        android:layout_alignParentRight="true"
                        android:text="Mbps"
                        android:layout_marginEnd="17dp"
                        android:textSize="12dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/b3"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/version_info"
            android:layout_below="@id/gate_info"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/info"/>
            <TextView
                android:id="@+id/c1"

                android:textColor="?android:attr/textColorPrimary"
                android:text="Version"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12dp"
                android:layout_below="@id/c1"
                android:id="@+id/c2"
                android:layout_marginTop="3dp"
                android:textColor="?android:attr/textColorSecondary"
                android:text="v1.0"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/git_info"
            android:layout_below="@id/version_info"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/review"/>
            <TextView
                android:id="@+id/d1"
                android:textColor="?android:attr/textColorPrimary"
                android:text="Rate us in Google Play"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12dp"
                android:layout_below="@id/d1"
                android:id="@+id/d2"
                android:layout_marginTop="3dp"
                android:textColor="?android:attr/textColorSecondary"
                android:text="Can we get 5 stars,please :)"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/suggest"
            android:layout_below="@id/git_info"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/email"/>
            <TextView
                android:id="@+id/d4"
                android:textColor="?android:attr/textColorPrimary"
                android:text="Report bug/ Suggest an idea"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12dp"
                android:layout_below="@id/d4"
                android:id="@+id/d5"
                android:layout_marginTop="3dp"
                android:textColor="?android:attr/textColorSecondary"
                android:text="Email us!"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:background="#1a1a20"
        app:itemTextColor="#FFF"
        android:maxWidth="250dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:elevation="5dp"
        app:menu="@menu/menu"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>