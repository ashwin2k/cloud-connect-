<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"

   >

    <RelativeLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <include
            android:id="@+id/k"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ScrollView
            android:layout_below="@+id/k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="THEMES"
                    android:textStyle="bold"

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                        android:layout_marginStart="53dp"
                        android:layout_marginTop="49dp"
                    android:text="Select a theme:"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/radgrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:checkedButton="@id/light"
                    android:layout_marginStart="169dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="126dp"
                    android:layout_marginRight="-77dp"
                    android:layout_marginBottom="356dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"
                        android:id="@+id/light"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dark"
                        android:text="Dark"

                        />
                </RadioGroup>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="0dp"
                    android:background="#393843" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/divider"
                    android:layout_marginTop="20dp"
                    android:text="NETWORK"

                    android:textSize="15dp" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/net_table"
                    android:stretchColumns="1"
                    android:layout_below="@id/textView4">
                    <TableRow
                        android:layout_height="50dp"
                        android:layout_width="fill_parent"
                       >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                             android:layout_marginStart="53dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_wifi" />

                        <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="23dp"
                        android:id="@+id/wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network:"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textStyle="bold"
                        android:textSize="15dp"
                        />
                        <TextView

                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/wifi_val"
                            android:layout_weight="2    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NaN"
                             
                            android:textSize="15dp"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_height="50dp"
                        >
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="53dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_speedometer" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/link_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Link speed:"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />
                        <TextView

                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/link_speed_val"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NaN"
                             
                            android:textSize="15dp"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_height="50dp">
                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="53dp"
                            android:layout_marginTop="20dp"

                            android:src="@drawable/ic_fence" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/ip_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gateway:"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />
                        <TextView

                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/ip_val"
                            android:layout_weight="2    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NaN"
                            android:textSize="15dp"
                            />
                    </TableRow>
                    <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                        android:bottomRightRadius="2dp"
                        android:bottomLeftRadius="2dp"
                        android:topLeftRadius="2dp"
                        android:topRightRadius="2dp"
                         
                        android:background="#1976D2"
                    android:text="Edit keys"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                   />
                    <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"


                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="20dp"
                    android:background="#393843" />
                </TableLayout>



                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/net_table"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="ABOUT"
                      
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:id="@+id/info_tab"
                    android:layout_below="@id/info">
                    <TableRow
                        android:layout_height="50dp"
                        >

                        <ImageView
                            android:id="@+id/infoimg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="53dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/info"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Version:"

                            android:textColor="?android:attr/textColorPrimary"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />
                        <TextView

                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/version_val"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NaN"
                             
                            android:textSize="15dp"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_height="50dp"
                        >

                        <ImageView
                            android:id="@+id/git"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="53dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_github" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="23dp"
                            android:id="@+id/gitlink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Github:"

                            android:textColor="?android:attr/textColorPrimary"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />
                        <TextView

                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="22dp"
                            android:id="@+id/github_val"
                            android:layout_weight="2    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NaN"
                           
                            android:textSize="15dp"
                            />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/info_tab"
                    android:textSize="18dp"
                   android:layout_alignParentBottom="true"
                    android:text="With ❤,from India "/>
            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:background="#1a1a20"
        app:itemTextColor="#FFF"
        android:maxWidth="250dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:elevation="5dp"
        app:menu="@menu/menu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>