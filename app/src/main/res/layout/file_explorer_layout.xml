<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"


    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ddcontent"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="200dp"
        android:id="@+id/beer_mug"
        android:src="@drawable/beer_mug"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/funny_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/beer_mug"
        android:layout_marginTop="24dp"
        android:shadowColor="#000"
        android:textSize="15dp"
        android:textColor="?android:attr/textColorPrimary"
        android:text="It's empty.Just like my beer mug."
        android:textAlignment="center"/>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_x"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:numColumns="4" />

<RelativeLayout
    android:id="@+id/bot_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include
    android:id="@+id/bot"
    layout="@layout/bottom_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:layout_marginStart="0dp"
    android:layout_marginBottom="0dp" />

    <include
        layout="@layout/cust_snack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bot"
        android:layout_alignParentStart="true"
         />
    <include
        layout="@layout/spinnerdia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_above="@id/bot"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>


</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:background="#1a1a20"
        app:itemTextColor="#FFF"
        android:maxWidth="250dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:elevation="5dp"
        app:menu="@menu/menu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>